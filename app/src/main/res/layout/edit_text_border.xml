        <!--REFERENCE-->
    <!-- Reference for TextEdit border http://www.android-examples.com/add-rounded-corners-border-to-edittext-android-using-xml/ -->


    <selector xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<item>
    <shape android:shape="rectangle">
        <solid android:color="#ffffff"/>
        <corners android:radius="10dp" />
        <stroke
            android:width="2dp"
            android:color="#CDDC39"
            />
    </shape>
</item>
</selector>
