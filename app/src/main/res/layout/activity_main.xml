<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.finalproject.youcef.bobo.MainActivity">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:inputType="text|textAutoCorrect"
        android:ems="10"
        android:id="@+id/checkTF"
        android:hint="Enter Taxi Number"
        android:background="@layout/edit_text_border"
        android:gravity="center"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp" />

    <Button
        android:text="Check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/checkTF"
        android:layout_marginTop="33dp"
        android:layout_alignRight="@+id/checkTF"
        android:layout_alignEnd="@+id/checkTF"
        android:layout_alignLeft="@+id/checkTF"
        android:layout_alignStart="@+id/checkTF" />

    <TextView
        android:text="Taxi Validation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/driverFname"
        android:text="Please enter one of the following:"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/checkTF"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:text="  - Taxi Registration Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_below="@+id/driverFname"
        android:layout_alignLeft="@+id/checkTF"
        android:layout_alignStart="@+id/checkTF" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/checkTF"
        android:layout_alignStart="@+id/checkTF" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/checkTF"
        android:layout_alignStart="@+id/checkTF" />

    <TextView
        android:text="  - Taxi Driver License Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/checkTF"
        android:layout_alignStart="@+id/checkTF" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp" />

    <Button
        android:id="@+id/noBtn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="NO"
        android:background="@color/colorDanger"
        android:textColor="@android:color/background_light"
        android:visibility="gone"
        android:layout_alignBottom="@+id/yesBtn"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_alignTop="@+id/yesBtn"
        android:onClick="noBtn"/>

    <Button
        android:id="@+id/noBtn2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="NO"
        android:background="@color/colorDanger"
        android:textColor="@android:color/background_light"
        android:visibility="gone"
        android:layout_alignBottom="@+id/yesBtn2"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_alignTop="@+id/yesBtn2"
        android:onClick="noBtn"/>

    <Button
        android:id="@+id/yesBtn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="YES"
        android:layout_marginBottom="26dp"
        android:visibility="gone"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/background_light"
        android:layout_above="@+id/textView"
        android:layout_alignRight="@+id/checkTF"
        android:layout_alignEnd="@+id/checkTF"
        android:onClick="yesBtn"/>

    <Button
        android:id="@+id/yesBtn2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="YES"
        android:layout_marginBottom="26dp"
        android:visibility="gone"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/background_light"
        android:layout_above="@+id/textView"
        android:layout_alignRight="@+id/checkTF"
        android:layout_alignEnd="@+id/checkTF"
        android:onClick="yesBtn2"/>

    <TextView
        android:id="@+id/isRegTF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registered"
        android:visibility="gone"
        android:textSize="28sp"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/notRegTf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not Registered"
        android:textSize="28sp"
        android:textColor="@color/colorDanger"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/questionTF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Will you be using this taxi?"
        android:textSize="20sp"
        android:visibility="gone"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>

